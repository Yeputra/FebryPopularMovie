<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.fp29499x.febrypopularmovie.DetailActivity">

        <RelativeLayout
            android:id="@+id/ibu"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:id="@+id/detailimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tittle_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="@dimen/movie_tittle_detail"
                android:textStyle="bold"
                tools:text="Beauty And The Beast" />

            <TextView
                android:id="@+id/releasedate_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="16dp"
                android:paddingTop="20dp"
                android:textColor="@color/white"
                android:textSize="@dimen/movie_tittle_detail"
                android:textStyle="bold"
                tools:text="2017" />

            <TextView
                android:id="@+id/rating_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/releasedate_movie"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:textColor="@color/white"
                android:textSize="@dimen/movie_tittle_detail"
                android:textStyle="bold"
                tools:text="7.6" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Synopsis:"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_movie" />

            <TextView
                android:id="@+id/synopsis_movie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="12dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_movie"
                tools:text="the story is about" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>